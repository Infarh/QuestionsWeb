@model BlogPostCardViewModel

<div data-anim-child="slide-up delay-3" class="col-lg-4 col-md-6">
    <a asp-controller="Blog" asp-action="Details" asp-route-Id="@Model.Id" class="blogCard -type-1">
        <div class="blogCard__image">
            <img class="w-1/1 rounded-8" src="@Model.ImageUrl" alt="image">
        </div>
        <div class="blogCard__content mt-20">
            <div class="blogCard__category">@Model.CategoryName</div>
            <h4 class="blogCard__title text-18 lh-15 fw-500 mt-5">@Model.Abstract</h4>
            <div class="blogCard__date mt-5">@Model.Date.ToString("D")</div>
        </div>
    </a>
</div>