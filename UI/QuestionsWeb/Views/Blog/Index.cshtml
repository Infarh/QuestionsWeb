@model IEnumerable<BlogPostCardViewModel>

<partial name="Partial/_BreadCrumbs"/>


<partial name="Partial/_BlogsHeader"/>

<section class="layout-pt-md layout-pb-lg">
    <div data-anim-wrap class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="row y-gap-30">

                    @foreach(var post_info in Model)
                    {
                        <vc:blog-post-card post-info="@post_info" />
                    }

                </div>

                <partial name="Partial/Pagination"/>
            </div>

            <partial name="Partial/RightSideBar"/>
        </div>
    </div>
</section>
