@model Person

<section class="layout-pt-lg layout-pb-md">

    <div data-anim-wrap class="container">

        <h2>Информация о человеке</h2>

        <a asp-controller="Home" asp-action="Index">Домой</a> |
        <a asp-controller="Person" asp-action="Index">К списку людей</a>


        <dl>
            <dd>Id:</dd>
            <dt>@Model.Id</dt>

            <dd>Имя:</dd>
            <dt>@Model.Name</dt>

            <dd>Фамилия:</dd>
            <dt>@Model.LastName</dt>
        </dl>
        <hr />

        <p>@Model.Description</p>
        
        @*<img src="~/qr/code?str=@Model.Name" width="200"/>*@
        <img src="@Url.Action("Code", "QR", new { str = $"Id={Model.Id},LastName={Model.LastName},Name={Model.Name}" })"
             width="300"/>

    </div>

</section>
